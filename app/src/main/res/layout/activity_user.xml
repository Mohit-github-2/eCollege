<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity"
    android:orientation="vertical"
    android:background="#F5F8CD">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hey! Welcome User,"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:textSize="35sp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"/>


    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:src="@drawable/logo"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="**Please Select your role below**"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="#ffff0000"/>
    <Button
        android:id="@+id/user_student_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/colorAccent"
        android:text="Student"
        android:textColor="#ffffff"
        />
    <Button
        android:id="@+id/user_faculty_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/colorAccent"
        android:text="Faculty"
        android:textColor="#ffffff"
        />
    <Button
        android:id="@+id/user_admin_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/colorAccent"
        android:text="Admin"
        android:textColor="#ffffff"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Developed by Mohit Sharmaâ¤"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="16sp"/>
</LinearLayout>






